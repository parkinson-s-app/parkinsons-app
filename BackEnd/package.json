{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "build/bin/www.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && export DEBUG=AppKinson:* && node ./build/bin/www.js",
    "dev": "nodemon --watch src -e ts,js --exec npm start",
    "test:file": "mocha --timeout 10000 --require ts-node/register",
    "test:only": "npm run test:file -- 'test/**/*.spec.ts'",
    "test": "npm run lint && npm run test:only",
    "coverage": "export $(cat test/.env-test | xargs) && nyc _mocha --timeout 10000 --require ts-node/register 'test/**/*.spec.ts'",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "coverage:web": "npm run coverage && http-server coverage/",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "docker": "docker build -t back .",
    "docker:d": "docker run -d -p 8000:8000 back",
    "docker:it": "docker run -it -p 8000:8000 back",
    "docker-up": "docker-compose up",
    "docker-build": "docker-compose build",
    "docker-down": "docker-compose down -v && npm run restartdb",
    "restartdb": "sudo rm -r src/db/data",
    "deleteOut": "test -f output.txt && rm output.txt || echo \"doesnt exists\"",
    "rund": "export DEBUG=AppKinson:* && nohup node ./build/bin/www.js >> output.txt 2>&1 &",
    "rundocker": "export DEBUG=AppKinson:* && node ./build/bin/www.js >> ./output.txt 2>&1 "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.16",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.10",
    "@types/sinon": "^10.0.0",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "http-server": "^0.12.3",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.1",
    "@types/speakeasy": "^2.0.5",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "express-actuator": "^1.7.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.5.0",
    "serve": "^11.3.2",
    "speakeasy": "^2.0.0",
    "uuid": "^8.3.2"
  }
}
